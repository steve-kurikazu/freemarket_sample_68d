.container
  .container__header
    = render "shared/share_header"  
    
  .container__main
    %h2 ログイン画面
    = form_with model: @user, url: session_path(resource_name), local: true do |f|
      .container__main__form
        .field
          = f.label :メールアドレス
          %span{class: "require"} 必須
          %br/  
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: '例）PC・携帯どちらでも可', required: true, class: "nickname_box"
          %br/
          %br/
          = f.label :パスワード
          %span{class: "require"} 必須
          - if @minimum_password_length
            %em
            -# (#{@minimum_password_length} characters minimum)    
          %br/
          = f.password_field :password, autofocus: "new-password", placeholder: '例）7文字以上の半角英数字', required: true, class: "nickname_box"

        %ul.container__low
          %li 
            = f.submit "ログイン", class: "form_submit"
          %li.form_submit.form_submit--facebook
            = link_to user_facebook_omniauth_authorize_path, method: :post, class:"form_submit__registration" do
              = icon('fab', 'facebook-square', class: "contents__btn--icon")
              %span Facebookでログイン
          %li.form_submit.form_submit--google
            = link_to user_google_oauth2_omniauth_authorize_path, method: :post, class:"form_submit__registration" do
              = icon('fab', 'google', class: "contents__btn--icon")
              %span Googleでログイン
        .another_link
          = render "devise/shared/links"
       
  = render "shared/footer_logo"
